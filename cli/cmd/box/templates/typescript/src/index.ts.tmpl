import { BoxRouter } from '@gravelight/box';

async function main() {
  try {
    // Create and initialize router
    const router = new BoxRouter({
      handlersDirs: ['./handlers', './containers']
    });

    await router.initialize();

    // Start server
    const port = process.env.PORT || 8080;
    router.listen(port, () => {
      // You can use this callback to trigger any post-startup logic
      // Box will output the server details to the console
    });
  } catch (error) {
    console.error('Failed to start server:', error);
    process.exit(1);
  }
}

main();
