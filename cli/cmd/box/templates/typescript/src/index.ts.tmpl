import { BoxRouter, HandlerRegistry } from '@gravelight-studio/box';
import pino from 'pino';
import * as handlers from '../handlers/health';

const logger = pino({
  transport: {
    target: 'pino-pretty',
    options: {
      colorize: true,
      ignore: 'pid,hostname'
    }
  }
});

async function main() {
  try {
    // Create router
    const router = new BoxRouter({
      handlersDir: './handlers',
      logger
    });

    await router.initialize();

    // Create registry and register handlers
    const registry = new HandlerRegistry(logger);
    registry.register('health', 'getHealth', handlers.getHealth);
    registry.register('health', 'getHello', handlers.getHello);

    // Register all handlers with router
    router.registerHandlers(registry);

    // Get Express app and start server
    const app = router.getApp();
    const port = process.env.PORT || 8080;

    app.listen(port, () => {
      logger.info(`Server listening on port ${port}`);
    });
  } catch (error) {
    logger.error('Failed to start server', { error });
    process.exit(1);
  }
}

main();
