import { Request, Response } from '@gravelight-studio/box';

interface HealthResponse {
  status: string;
  timestamp: Date;
  version: string;
}

// @box:function
// @box:path GET /health
// @box:auth none
export const getHealth = (req: Request, res: Response) => {
  const response: HealthResponse = {
    status: 'healthy',
    timestamp: new Date(),
    version: '1.0.0'
  };

  res.status(200).json(response);
};

// @box:function
// @box:path GET /api/hello
// @box:auth none
export const getHello = (req: Request, res: Response) => {
  res.status(200).json({
    message: 'Hello from Box!'
  });
};
